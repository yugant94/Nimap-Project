@model IEnumerable<Nimap_Project.Models.Product>

<h2>Product List</h2>
<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.CategoryId</td>
                <td>@product.Category.CategoryName</td> 
                <td>
                    
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning">Edit</a>

                    
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger">Delete</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="@Url.Action("Index", "Category")" class="btn btn-info">Category Page</a>



