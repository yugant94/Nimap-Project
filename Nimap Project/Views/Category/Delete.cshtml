@model Nimap_Project.Models.Category

<h2>Delete Category</h2>
<p>Are you sure you want to delete this category?</p>

<div>
    <p>
        <strong>CategoryId:</strong> @Model.CategoryId <br />
        <strong>CategoryName:</strong> @Model.CategoryName
    </p>
</div>

@using (Html.BeginForm("Delete", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CategoryId) 
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
}
